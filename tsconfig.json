{
    "compilerOptions": {
        "target": "es6",
        "module": "NodeNext",
        "lib": [
            "es6",
            "ES2021.String"
        ],
        "outDir": "build",
        "rootDir": ".",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "package.json"],
    "exclude": [
        "test.js"
    ]
}

