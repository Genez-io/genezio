{
    "compilerOptions": {
        "target": "ES2021",
        "module": "NodeNext",
        "lib": ["es6", "ES2021"],
        "outDir": "build",
        "rootDir": ".",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noPropertyAccessFromIndexSignature": true
    },
    "include": ["src/**/*", "package.json"],
    "exclude": ["test.js"]
}
